<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>liftServer4Demo</display-name>
    <!--<context-param>
        <param-name>log4jConfiguration</param-name>
        <param-value>file://${project.build.directory}/classes/log4j2.xml</param-value>
    </context-param>
    -->
    <filter>
        <filter-name>webFilter</filter-name>
        <filter-class>com.ico.liftserver4demo.util.webFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>webFilter</filter-name>
        <servlet-name>login</servlet-name>
        <servlet-name>itextPdf</servlet-name>
        <servlet-name>app</servlet-name>
        <servlet-name>fileuplaod</servlet-name>
        <servlet-name>itextHtmlPdf</servlet-name>
        <servlet-name>PdfServlet</servlet-name>
    </filter-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.ico.liftserver4demo.controller.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>itextPdf</servlet-name>
        <servlet-class>com.ico.liftserver4demo.controller.itextPdf</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>app</servlet-name>
        <servlet-class>com.ico.liftserver4demo.controller.app</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>fileuplaod</servlet-name>
        <servlet-class>com.ico.liftserver4demo.controller.Upload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>itextHtmlPdf</servlet-name>
        <servlet-class>com.ico.liftserver4demo.controller.itextHtmlPdf</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PdfServlet</servlet-name>
        <servlet-class>com.ico.liftserver4demo.controller.PDFServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAdaptor</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <description>Multiple packages, separated by semicolon(;), can be specified in param-value</description>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>com.ico.liftserver4demo.model.service</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>itextPdf</servlet-name>
        <url-pattern>/itextPdf</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>app</servlet-name>
        <url-pattern>/app/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>app</servlet-name>
        <url-pattern>/app</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>fileuplaod</servlet-name>
        <url-pattern>/fileupload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>itextHtmlPdf</servlet-name>
        <url-pattern>/itextHtmlPdf</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PdfServlet</servlet-name>
        <url-pattern>/PdfServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAdaptor</servlet-name>
        <url-pattern>/ws/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <persistence-unit-ref>
        <persistence-unit-ref-name>persistence-factory</persistence-unit-ref-name>
        <persistence-unit-name>com.ico_liftServer4Demo_war_1.0-SNAPSHOTPU</persistence-unit-name>
    </persistence-unit-ref>
</web-app>
